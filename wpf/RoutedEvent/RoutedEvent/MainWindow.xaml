<Window x:Class="RoutedEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutedEvent"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btnClickMe" Height="75" Margin="42,122,41,122" Click="btnClickMe_Click" PreviewMouseMove="btnClickMe_PreviewMouseMove">
            <StackPanel Orientation="Horizontal">
                <Label Height="50" FontSize="20">Lable Disply!</Label>
                <Canvas Height="50" Width="100">
                    <Ellipse Name="outerEllliple" Fill="Green" Height="50" Width="90" Cursor="Hand" MouseDown="outerEllliple_MouseDown"></Ellipse>
                    <Button Content="Inner Button" Name="InnerButton" Height="25" Width="78" Cursor="Hand" Canvas.Left="-223" Canvas.Top="10" Click="InnerButton_Click" PreviewMouseMove="InnerButton_PreviewMouseMove"></Button>
                    <Ellipse Name="innerEllliple" Fill="Yellow" Height="51" Width="82" Cursor="Hand" Canvas.Left="110" Canvas.Top="-1"></Ellipse>
                </Canvas>
            </StackPanel>
            
        </Button>
    </Grid>
</Window>
